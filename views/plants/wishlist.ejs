<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('../partials/head.ejs') %>
<body>
    <%- include ('../partials/nav.ejs') %>
    <%- include ('../partials/header.ejs') %>
    <div class="wishlist-container">
        <h3 id="wishlist">Houseplants Wishlist</h3>
        <a href="/plants/wishlist/new" id="newWishlist">Add a plant to your wishlist</a>
        <div class="index-container">
            <%for (let plant of wishlist){ %>
                <div class="plant-card">
                    <a href="#"><h2><%=plant.commonName%></h2></a>
                    <a href="#"><img src="<%=plant.photo%>" alt="<%=plant.commonName%>"/></a>
                    <a href="#"><h3><%=plant.scientificName%></h3></a>
                    <form action="/plants/wishlist/<%=plant._id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE">
                    </form>
                </div>
            <%}%>
        </div>
        <%- include ('../partials/footer.ejs') %>
    </div>
</body>
</html>
